@model QBox.Web.Models.QuizCategoriesViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alright, let's start a new Quiz Game!</h2>
<label for="Category">Select the category for your quiz:</label>
<div class="form-group">
    @using (Html.BeginForm("Start", "Category", FormMethod.Post, new { role = "form" }))
    {
        <div class="list-group list-categories">

            @foreach (var c in Model.Categories)
            {
                <div class="list-group-item">
                    <button type="submit" class="btn btn-lg btn-info btn-category" value="@c.Id" name="@c.Id">@c.Name</button>
                </div>
            }
        </div>
    }
</div>

